<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_categories"
    tools:context=".playMusic">

    <TextView
        android:id="@+id/musicGenreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/circularb_medium"
        android:textColor="@color/categories_title"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicGenreTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:fontFamily="@font/circularb_medium"
                android:text="Level"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="92dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/level"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <TextView
                    android:id="@+id/levelCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/courier_prime_bold"
                    android:letterSpacing="-0.2"
                    android:textColor="@color/categories_title"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularb_medium"
                android:text="Score"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/score"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28">

                <TextView
                    android:id="@+id/scoreValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/courier_prime_bold"
                    android:textColor="@color/categories_title"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBar4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="70dp"
            android:indeterminateDrawable="@drawable/progress_animated_rotate"
            android:toDegrees="720"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4">

            <Button
                android:id="@+id/chooseBtn3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circularb_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:cornerRadius="17dp"
                app:layout_constraintBottom_toTopOf="@+id/chooseBtn4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseBtn2"
                app:strokeColor="@color/categories_title"
                app:strokeWidth="1dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/chooseBtn2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circularb_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:cornerRadius="17dp"
                app:layout_constraintBottom_toTopOf="@+id/chooseBtn1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseBtn3"
                app:strokeColor="@color/categories_title"
                app:strokeWidth="1dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/chooseBtn1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circularb_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:cornerRadius="17dp"
                app:layout_constraintBottom_toTopOf="@+id/chooseBtn2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/categories_title"
                app:strokeWidth="1dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/chooseBtn4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/circularb_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/categories_title"
                android:textSize="20sp"
                app:cornerRadius="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseBtn3"
                app:strokeColor="@color/categories_title"
                app:strokeWidth="1dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBarForSong"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="8dp"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:progressDrawable="@drawable/custom_progress_bar_song"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>