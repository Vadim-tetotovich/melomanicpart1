<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".end_game">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="379dp"
        android:layout_height="677dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/endgameimg" />

    <TextView
        android:id="@+id/endGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/circularb_medium"
        android:textColor="@color/categories_title"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/circularb_medium"
        android:textColor="@color/categories_title"
        android:text="Score"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="@+id/endGameTitle"
        app:layout_constraintStart_toStartOf="@+id/endGameTitle"
        app:layout_constraintTop_toBottomOf="@+id/endGameTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/end_game_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/endGameScoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courier_prime_bold"
            android:textColor="@color/categories_title"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/endGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/circularb_medium"
        android:textColor="@color/categories_title"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout5"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout5"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <ProgressBar
        android:id="@+id/progressBarAvatar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="312dp"
        android:layout_height="10dp"
        android:layout_marginTop="120dp"
        android:progressDrawable="@drawable/avatar_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/endGameText"
        app:layout_constraintStart_toStartOf="@+id/endGameText"
        app:layout_constraintTop_toBottomOf="@+id/endGameText" />

    <Button
        android:id="@+id/endGameRestart"
        android:layout_width="272dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:text="Restart"
        android:backgroundTint="@color/btn_continue_color"
        android:fontFamily="@font/circularb_bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="@+id/progressBarAvatar"
        app:layout_constraintStart_toStartOf="@+id/progressBarAvatar"
        app:layout_constraintTop_toBottomOf="@+id/progressBarAvatar"
        app:strokeColor="@color/btn_continue_stroke_color"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/endGameHome"
        android:layout_width="272dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/btn_continue_color"
        android:fontFamily="@font/circularb_bold"
        android:text="Home"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="@+id/endGameRestart"
        app:layout_constraintStart_toStartOf="@+id/endGameRestart"
        app:layout_constraintTop_toBottomOf="@+id/endGameRestart"
        app:strokeColor="@color/btn_continue_stroke_color"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:background="#5722EE"
        app:layout_constraintBottom_toTopOf="@+id/progressBarAvatar"
        app:layout_constraintEnd_toEndOf="@+id/progressBarAvatar"
        app:layout_constraintStart_toStartOf="@+id/progressBarAvatar" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:background="#5722EE"
        app:layout_constraintBottom_toTopOf="@+id/progressBarAvatar"
        app:layout_constraintEnd_toEndOf="@+id/progressBarAvatar"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toEndOf="@+id/textView30" />

    <ImageView
        android:id="@+id/endGameAvatar50"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarAvatar"
        app:layout_constraintStart_toStartOf="@+id/progressBarAvatar"
        app:srcCompat="@drawable/avatar_close" />

    <ImageView
        android:id="@+id/endGameAvatar80"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarAvatar"
        app:layout_constraintEnd_toEndOf="@+id/progressBarAvatar"
        app:srcCompat="@drawable/avatar_close" />

</androidx.constraintlayout.widget.ConstraintLayout>