<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="345dp"
    android:layout_height="48dp"
    android:layout_gravity="bottom|center_horizontal"
    android:background="@drawable/custom_dialog_style">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/circularb_regular"
        android:letterSpacing="0.03"
        android:text="Set as avatar?"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517" />

    <Button
        android:id="@+id/dialogSetBtn"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/circularb_medium"
        android:letterSpacing="0.1"
        android:text="SET"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/choose_btn_backcolor_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>